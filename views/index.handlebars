<div class="container">
  <div style="margin:0 auto; width:200px;display:block; padding-top: 3em;">
    <img src="
  https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTya8czq4HxN2YGQwbp7yLTY3OEM7s2SR9Rhmwm8-f9YT-gUcjd&usqp=CAU"
      alt="burger">
  </div>

  <h2 style="color: red; text-align: center;">Eat-Da-Burger</h2>

  <div style="margin: 0 auto;width:200px;display:block; padding-bottom: 3em;">
    <form class="create-form">

      <div class="form-group">
        <input type="text" class="form-control" name="burger" id="inputBurger"></input>
        <small id="btnHelp" class="form-text text-muted">Enter a burger you want to eat and Click the "Submit"
          button.</small>
      </div>

      <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>

    </form>
  </div>

  <div class="container col-4" style="margin: 0;float: left;">
    {{#each burgers}}
    {{#if devoured}}
    <ul class=" list-group">
      <li class=" list-group-item disabled">
        <p>{{id}}. {{burger_name}}</p>
      </li>
    </ul>
    {{/if}}
    {{/each}}
  </div>

  <div class="container col-4" style="margin-right: 0;">
    {{#each burgers}}
    {{#unless devoured}}
    <ul class="list-group">
      <li class=" list-group-item">
        <p>{{id}}. {{burger_name}} &nbsp;&nbsp; <button data-burgerid="{{this.id}}" type=" submit"
            class="btn btn-primary devourBtn">Devour
            it!</button></p>
      </li>
    </ul>
    {{/unless}}
    {{/each}}
  </div>
</div>

